{
  "database_type": "sqlite",
  "database_name": "machine_data.db",

  "table_metadata": [
    {
      "table_name": "EMS_Hourly",
      "description": "Hourly machine sensor data"
    },
    {
      "table_name": "EMS_Daily",
      "description": "Daily aggregated machine sensor data"
    },
    {
      "table_name": "EMS_Shiftwise",
      "description": "Shift-wise aggregated machine sensor data"
    }
  ],

  "db_schema_metadata": [
    {
      "column_name": "time",
      "description": "Time instance at which channel values are recorded",
      "column_datatype": "DATETIME"
    },

    { "column_name": "NCH1",  "description": "Axis current - 1", "column_datatype": "REAL" },
    { "column_name": "NCH2",  "description": "Axis current - 2", "column_datatype": "REAL" },
    { "column_name": "NCH3",  "description": "Axis current - 3", "column_datatype": "REAL" },
    { "column_name": "NCH4",  "description": "Axis current - 4", "column_datatype": "REAL" },
    { "column_name": "NCH26", "description": "Axis current - 5", "column_datatype": "REAL" },
    { "column_name": "NCH27", "description": "Axis current - 6", "column_datatype": "REAL" },

    { "column_name": "NCH5",  "description": "Axis load - 1", "column_datatype": "REAL" },
    { "column_name": "NCH6",  "description": "Axis load - 2", "column_datatype": "REAL" },
    { "column_name": "NCH7",  "description": "Axis load - 3", "column_datatype": "REAL" },
    { "column_name": "NCH8",  "description": "Axis load - 4", "column_datatype": "REAL" },
    { "column_name": "NCH28", "description": "Axis load - 5", "column_datatype": "REAL" },
    { "column_name": "NCH29", "description": "Axis load - 6", "column_datatype": "REAL" },

    { "column_name": "NCH9",  "description": "Actual axis speed - 1", "column_datatype": "REAL" },
    { "column_name": "NCH10", "description": "Actual axis speed - 2", "column_datatype": "REAL" },
    { "column_name": "NCH11", "description": "Actual axis speed - 3", "column_datatype": "REAL" },
    { "column_name": "NCH12", "description": "Actual axis speed - 4", "column_datatype": "REAL" },
    { "column_name": "NCH30", "description": "Actual axis speed - 5", "column_datatype": "REAL" },

    { "column_name": "NCH13", "description": "Axis motor temperature - 1", "column_datatype": "REAL" },
    { "column_name": "NCH14", "description": "Axis motor temperature - 2", "column_datatype": "REAL" },
    { "column_name": "NCH15", "description": "Axis motor temperature - 3", "column_datatype": "REAL" },
    { "column_name": "NCH16", "description": "Axis motor temperature - 4", "column_datatype": "REAL" },

    { "column_name": "NCH17", "description": "Commanded axis feedrate", "column_datatype": "REAL" },
    { "column_name": "NCH18", "description": "Spindle current", "column_datatype": "REAL" },
    { "column_name": "NCH19", "description": "Spindle load", "column_datatype": "REAL" },
    { "column_name": "NCH20", "description": "Spindle actual RPM / Speed", "column_datatype": "REAL" },
    { "column_name": "NCH21", "description": "Spindle motor temperature", "column_datatype": "REAL" },
    { "column_name": "NCH22", "description": "DC bus voltage", "column_datatype": "REAL" },
    { "column_name": "NCH23", "description": "Power module energy (kWh)", "column_datatype": "REAL" },

    { "column_name": "NCH24", "description": "Machine status code", "column_datatype": "INTEGER" },
    { "column_name": "NCH25", "description": "Alarm name / message", "column_datatype": "TEXT" },

    { "column_name": "IotdeviceId", "description": "Unique IoT device ID", "column_datatype": "TEXT" },
    { "column_name": "MachineId",   "description": "Unique machine ID", "column_datatype": "TEXT" },
    { "column_name": "MachineName", "description": "Machine name", "column_datatype": "TEXT" },
    { "column_name": "DivisionName", "description": "Division name", "column_datatype": "TEXT" },
    { "column_name": "PlantName",    "description": "Plant name", "column_datatype": "TEXT" },
    { "column_name": "SubPlantName", "description": "Sub plant name", "column_datatype": "TEXT" },
    { "column_name": "ProcessName",  "description": "Process name", "column_datatype": "TEXT" }
  ]
}
